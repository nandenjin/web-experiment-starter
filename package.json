{
  "name": "@nandenjin/web-experiment-starter",
  "version": "0.0.0",
  "main": "index.js",
  "repository": "git@github.com:nandenjin/web-experiment-starter.git",
  "author": "Kazumi Inada <hello@nandenjin.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint": "run-s lint:*",
    "lint:script": "eslint --ext ts,js .",
    "lint:style": "stylelint ./src/**/*.scss",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css,sass,scss,json,yml,yaml,md}\"",
    "build": "cross-env NODE_ENV=production webpack",
    "start": "run-s dev",
    "dev": "webpack serve --mode development"
  },
  "dependencies": {},
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "cross-env": "^7.0.3",
    "css-loader": "^5.1.1",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "html-webpack-plugin": "^5.2.0",
    "husky": "=5",
    "lint-staged": ">=10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "sass": "^1.32.8",
    "sass-loader": "^11.0.1",
    "style-loader": "^2.0.0",
    "stylelint": "^13.12.0",
    "stylelint-config-recess-order": "^2.3.0",
    "stylelint-config-standard": "^20.0.0",
    "ts-loader": "^8.0.17",
    "typescript": "^4.2.2",
    "webpack": "^5.24.2",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "eslint --cache --fix",
    "*.{css,sass,scss}": "stylelint --fix",
    "*.{js,ts,jsx,tsx,css,sass,scss,json,md,yaml,yml}": "prettier --write"
  }
}
